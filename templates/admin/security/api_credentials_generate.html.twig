{% extends '@!EasyAdmin/layout.html.twig' %}

{% block page_title %}
    API Credentials
{% endblock page_title %}

{% block main %}

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mt-4">
                <div class="card p-4">
                    <h1 class="h3 mb-3 font-weight-normal text-center">
                        {{ 'Use Authy or Google Authenticator to Scan the QR Code'|trans }}
                    </h1>
                    <img class="img-fluid mx-auto d-block mb-4" src="{{ path('app_qr_code') }}" alt="2fa QR Code">
                </div>
            </div>
        </div>
    </div>

{% endblock main %}