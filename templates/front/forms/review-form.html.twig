<div class="col-lg-12 d-flex align-items-center reservation-form-bg">
    <form method="post" action="/reviews" class="col-lg-12 php-email-form" data-aos="fade-up" data-aos-delay="100">
        {{ form_start(form) }}
        <div class="row gy-4">
            <div class="col-lg-4 col-md-6">
                <input type="text"
                       name="{{ field_name(form.name) }}"
                       class="form-control"
                       id="name"
                       placeholder="Your Name"
                       data-rule="minlen:4"
                       data-msg="Please enter at least 4 chars"
                       {% if form.name.vars.required %}required{% endif %}>
                <div class="validate">
                    {{ form_errors(form.name) }}
                </div>
            </div>
            <div class="col-lg-4 col-md-6">
                <input type="email"
                       class="form-control"
                       name="{{ field_name(form.email) }}"
                       id="email"
                       placeholder="Your Email"
                       data-rule="email"
                       data-msg="Please enter a valid email"
                       {% if form.name.vars.required %}required{% endif %}>
                <div class="validate">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="col-lg-2 col-md-6 rating">
                {% for i in 1..5 %}
                    <input type="radio" name="{{ field_name(form.rating) }}" value="{{ i }}"
                           id="{{ i }}">
                    <label for="{{ i }}">â˜†</label>
                {% endfor %}
                <div class="validate">
                    {{ form_errors(form.rating) }}
                </div>
            </div>
        </div>
        <div class="form-group mt-3">
            <textarea class="form-control" name="{{ field_name(form.content) }}" rows="5"
                      placeholder="Did You liked your stay with us ?"></textarea>
            <div class="validate">
                {{ form_errors(form.content) }}
            </div>
        </div>
        <div class="text-center pt-3">
            {{ form_row(form.submit) }}
        </div>
        <div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </form>
</div>
<!-- End Review Form -->