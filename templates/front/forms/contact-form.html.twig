<form action="/contact" method="post" role="form" class="php-email-form p-3 p-md-4">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-xl-6 form-group">
            <input type="text" name="{{ field_name(form.name) }}" class="form-control" id="name" placeholder="Your Name" required>

            <div class="validate">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="col-xl-6 form-group">
            <input type="email" class="form-control" name="{{ field_name(form.email) }}" id="email" placeholder="Your Email"
                   required>

            <div class="validate">
                {{ form_errors(form.email) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" name="{{ field_name(form.subject) }}" id="subject" placeholder="Subject" required>

        <div class="validate">
            {{ form_errors(form.subject) }}
        </div>
    </div>
    <div class="form-group">
        <textarea class="form-control" name="{{ field_name(form.content) }}" rows="5" placeholder="Message" required></textarea>
        <div class="validate">
            {{ form_errors(form.content) }}
        </div>
    </div>
    <div class="my-3">
        <div class="loading">Loading</div>
        <div class="error-message"></div>
        <div class="sent-message">Your message has been sent. Thank you!</div>
    </div>
    <div class="text-center">
        {{ form_row(form.submit) }}
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
</form>
<!--End Contact Form -->